import React from "react";

interface ThrottleProps {
  func: () => void;
  wait: number;
  leading?: boolean;
  trailing?: boolean;
}

const Throttle: React.FC<ThrottleProps> = ({
  func,
  wait,
  leading = false,
  trailing = false,
}) => {
  let args: any;
  let timeout: NodeJS.Timeout | null = null;
  let previous: number = 0;

  const throttledFunction = function (this: any, test: String = "test") {
    let now: number = new Date().getTime();
    if (!previous && !leading) previous = now;
    let remaining = wait - (now - previous);
    args = arguments;
    console.log("args", arguments);
    if (remaining <= 0) {
      if (timeout !== null) {
        clearTimeout(timeout);
        timeout = null;
      }
      previous = now;
      func.apply(this, args);
    } else if (!timeout && trailing) {
      timeout = setTimeout(function (this: any) {
        previous = new Date().getTime();
        timeout = null;
        func.apply(this, args);
      }, remaining);
    }
  };

  return <ThrottleWrapper throttledFunction={throttledFunction} />;
};

const ThrottleWrapper = (props: any) => <></>;

export default Throttle;
